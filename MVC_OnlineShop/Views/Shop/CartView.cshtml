@using MVC_OnlineShop.Models
@using System.Web.Optimization

@*@model IEnumerable<MVC_OnlineShop.Models.Product>*@
@model IEnumerable<MVC_OnlineShop.Models.CartItem>

@{
    @*var cartItem = ViewBag.cart;*@
    //int subTotal = 0;

    if (Session[ "cart" ] != null) {
        using (Html.BeginForm("UpdateQuantity", "Shop", FormMethod.Post)) {
            <section class="pt-5 pb-5">
                <div class="container">
                    <div class="row w-100">
                        <div class="col-lg-12 col-md-12 col-12">
                            <h3 class="display-5 mb-2 text-center">Shopping Cart</h3>
                            <p class="mb-5 text-center">
                                <i class="text-info font-weight-bold">@Session[ "count" ]</i> items in your cart
                            </p>
                            <table id="shoppingCart" class="table table-condensed table-responsive">
                                <thead>
                                    <tr>
                                        <th style="width:60%">Product</th>
                                        <th style="width:12%">Price</th>
                                        <th style="width:10%">Quantity</th>
                                        <th style="width:16%"></th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @*@foreach (var product in Session[ "cart" ] as List<Product>) {*@
                                    @*@foreach (var product in Model) {*@
                                    @*@foreach (var cartItem in Model) {*@
                                    @foreach (var cartItem in (List<CartItem>)Session[ "cart" ]) {
                                        <tr>
                                            <td data-th="Product">
                                                <div class="row">
                                                    <div class="col-md-3 text-left">
                                                        <img src="@cartItem.Product.Image_Url" alt="" class="img-fluid d-none d-md-block rounded mb-2 shadow ">
                                                    </div>
                                                    <div class="col-md-9 text-left mt-sm-2">
                                                        <h4>@cartItem.Product.Name</h4>
                                                        <p class="font-weight-light">@cartItem.Product.Description</p>
                                                    </div>
                                                </div>
                                            </td>
                                            <td data-th="Price">$@(cartItem.Product.Price * cartItem.Quantity)</td>
                                            <td data-th="Quantity">
                                                <input type="number" name="cartProductQuantity" class="form-control form-control-lg text-center" value="@cartItem.Quantity"> <!-- TODO: Get this working dynamically -->
                                            </td>
                                            <td class="actions" data-th="">
                                                <div class="text-right">
                                                    <!-- TODO: Link for update quantity amount -->
                                                    <button class="btn btn-white border-secondary bg-white btn-md mb-2" type="submit" onclick="location.href = '@Url.Action("UpdateQuantity", "Shop")'">
                                                        <i class="fa fa-refresh"></i>
                                                    </button>
                                                    <!-- Remove Button -->
                                                    <button type="button" class="btn btn-white border-secondary bg-white btn-md mb-2" data-Id="@cartItem.Product.Id" onclick="location.href='@Url.Action("RemoveProductById", "Shop", new { id = cartItem.Product.Id })'">
                                                        <span class="fa fa-trash-o"></span>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                            <div class="float-right text-right">
                                <!-- TODO: Create subtotal -->
                                @*@foreach (var sum in Model) {
                                        subTotal = Convert.ToInt32(sum.Product.Price) + subTotal;
                                    }*@
                                @{
                                    List<CartItem> cartList = (List<CartItem>)Session[ "cart" ];
                                    var subTotal = cartList.Sum(item => item.Product.Price * item.Quantity);
                                }
                                <h4>Subtotal:</h4>
                                <h1>$@subTotal</h1>
                            </div>
                        </div>
                    </div>
                    <div class="row mt-4 d-flex align-items-center">
                        <div class="col-sm-6 order-md-2 text-right">
                            <a href="#" class="btn btn-primary mb-4 btn-lg pl-5 pr-5">Checkout</a> <!-- TODO: Redirect to checkout page -->
                        </div>
                        <div class="col-sm-6 mb-3 mb-m-1 order-md-1 text-md-left">
                            <a href="@Url.Action("Portal", "Shop")">
                                <!-- TODO: Redirect to Shopping page -->
                                <i class="fa fa-arrow-left mr-2"></i> Continue Shopping
                            </a>
                        </div>
                    </div>
                </div>
            </section>
        }
    } else {
        <section class="pt-5 pb-5">
            <div class="container">
                <div class="row w-100">
                    <div class="col-lg-12 col-md-12 col-12">
                        <h3 class="display-5 mb-2 text-center">Shopping Cart</h3>
                        <p class="mb-5 text-center">
                            <i class="text-info font-weight-bold">0</i> items in your cart
                        </p>
                        <table id="shoppingCart" class="table table-condensed table-responsive">
                            <thead>
                                <tr>
                                    <th style="width:60%">Product</th>
                                    <th style="width:12%">Price</th>
                                    <th style="width:10%">Quantity</th>
                                    <th style="width:16%"></th>
                                </tr>
                            </thead>
                        </table>
                        <h4 class="text-center">No items in your shopping cart!</h4>
                    </div>
                </div>
                <div class="row mt-4 d-flex align-items-center">
                    <div class="col-sm-6 mb-3 mb-m-1 order-md-1 text-md-left">
                        <a href="@Url.Action("Portal", "Shop")">
                            <!-- TODO: Redirect to Shopping page -->
                            <i class="fa fa-arrow-left mr-2"></i> Continue Shopping
                        </a>
                    </div>
                </div>
            </div>
        </section>
    }
}